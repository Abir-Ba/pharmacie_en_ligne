<div class="row">
  <div class="col-6"><h1>Medicaments</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/addmedicament" type="button" class="btn btn-success align-self-center">+ Medicament</a>
  </div>
</div>
<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nom</th>
      <th scope="col">Dosage</th>
      <th scope="col">Prix</th>
      <th scope="col">Date de fabrication</th>
      <th scope="col">Date d'expiration</th>
       <th scope="col" class="text-end"></th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.idMedicament}}</th>
      <td>{{this.Nom}}</td>
      <td>{{this.Dosage}}</td>
      <td>{{this.Prix}}</td>
      <td>{{this.DF}}</td>
      <td>{{this.DE}}</td>
       <td class="text-end">
           <a href="/editmedicament/{{this.idMedicament}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
           <a href="/{{this.idMedicament}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a>
       </td>
    </tr>
    {{/each}}
  </tbody>
</table>